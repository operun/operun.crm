<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="operun.crm">
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">

        <div class="account-wrapper">

          <h4 i18n:translate="account_view_type">Type</h4>
          <div tal:content="context/type"></div>

          <h4 i18n:translate="account_view_logo">Logo</h4>
          <div tal:content="structure view/get_image"></div>

          <h4 i18n:translate="account_view_phone">Phone</h4>
          <div tal:content="context/phone"></div>

          <h4 i18n:translate="account_view_fax">Fax</h4>
          <div tal:content="context/fax"></div>

          <h4 i18n:translate="account_view_billing_email">Billing E-Mail</h4>
          <div tal:content="context/billing_email"></div>

          <h4 i18n:translate="account_view_website">Website</h4>
          <div tal:content="context/website"></div>

          <h4 i18n:translate="account_view_address">Address</h4>
          <div tal:content="context/address"></div>

          <h4 i18n:translate="account_view_ceo">CEO</h4>
          <div tal:content="context/ceo"></div>

          <h4 i18n:translate="account_view_invoice_name">Invoice name</h4>
          <div tal:content="context/invoice"></div>

          <h4 i18n:translate="account_view_postal_code">Postal code</h4>
          <div tal:content="context/zip"></div>

          <h4 i18n:translate="account_view_city">City</h4>
          <div tal:content="context/city"></div>

          <h4 i18n:translate="account_view_notes">Notes</h4>
          <div tal:content="structure context/text/output"></div>

        </div>

      </metal:content-core>
    </metal:content-core>

  </body>
</html>
