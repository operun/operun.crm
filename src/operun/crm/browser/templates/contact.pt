<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="operun.crm">
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">

        <div class="contact-wrapper">

          <h4 i18n:translate="contact_view_firstname">Firstname</h4>
          <div tal:content="context/firstname" tal:condition="context/firstname"></div>

          <h4 i18n:translate="contact_view_lastname">Lastname</h4>
          <div tal:content="context/lastname" tal:condition="context/lastname"></div>

          <h4 i18n:translate="contact_view_type">Type</h4>
          <div tal:content="context/type" tal:condition="context/type"></div>

          <h4 i18n:translate="contact_view_account_relation">Account Relation</h4>
          <div tal:content="context/account/to_object/title" tal:condition="context/account"></div>

          <h4 i18n:translate="contact_view_phone">Phone</h4>
          <div tal:content="context/phone" tal:condition="context/phone"></div>

          <h4 i18n:translate="contact_view_mobile">Mobile</h4>
          <div tal:content="context/mobile" tal:condition="context/mobile"></div>

          <h4 i18n:translate="contact_view_email">E-Mail</h4>
          <div tal:content="context/email" tal:condition="context/email"></div>

          <h4 i18n:translate="contact_view_notes">Notes</h4>
          <div tal:replace="structure context/notes/output" tal:condition="context/notes"></div>

        </div>

      </metal:content-core>
    </metal:content-core>

  </body>
</html>
