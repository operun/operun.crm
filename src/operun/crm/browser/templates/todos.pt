<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="operun.crm">
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">

        <div id="todos-container">
          <div class="todos-wrapper" tal:define="todos python:view.get_todos()">
            <div class="contact-wrapper" tal:repeat="obj todos">

              <a href="" tal:attributes="href obj/absolute_url">
                <h3>
                  <span tal:content="obj/task_id"></span>
                  <span tal:content="obj/title"></span>
                </h3>
              </a>

              <p tal:content="obj/description"></p>

            </div>
          </div>
        </div>

      </metal:content-core>
    </metal:content-core>

  </body>
</html>
