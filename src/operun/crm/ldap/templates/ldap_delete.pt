<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="operun.crm">

  <body>

    <metal:content-core fill-slot="main">

      <div tal:define="context_title context/title">

        <h1>LDAP Delete</h1>

        <h3>${context_title} will be deleted from LDAP.</h3>

        <form action="${context/absolute_url}/@@ldap-delete"
              id="ldap-delete"
              name="ldap-delete-form"
              enctype="multipart/form-data"
              method="post">
          <div class="formControls">
            <button type="submit" value="Delete" name="form.buttons.sync">
              Delete
            </button>
          </div>
        </form>

      </div>

    </metal:content-core>

  </body>

</html>
